{
  "name": "amondar-libs/class-attributes",
  "description": "PHP class attributes workflow for package development.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Sereda Oleg (Amondar)",
      "homepage": "https://github.com/amondar-libs"
    }
  ],
  "require": {
    "php": "^8.3",
    "illuminate/support": "^10|^11|^12.0",
    "spatie/php-structure-discoverer": "2.3.3"
  },
  "require-dev": {
    "orchestra/testbench": "^10.8",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^4.1",
    "laravel/pint": "^1.24",
    "spatie/laravel-ray": "^1.41"
  },
  "autoload": {
    "psr-4": {
      "Amondar\\ClassAttributes\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "ppest": "pest --parallel"
  }
}
